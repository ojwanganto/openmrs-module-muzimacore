                        <value>2</value>
                    </item>
                    <item>
                        <label>Webuye</label>
                        <value>8</value>
                    </item>
                    <item>
                        <label>AMPATH MTRH</label>
                        <value>9</value>
                    </item>
                </select1>
                <select1 bind="encounter.provider_id">
                    <label>Provider For This Encounter</label>
                    <item>
                        <label>Daurine Achieng Agumba</label>
                        <value>3419-9</value>
                    </item>
                    <item>
                        <label>Irene Chepkosgei	Kurgat</label>
                        <value>3420-7</value>
                    </item>
                    <item>
